<?xml version="1.0" encoding="utf-8"?>

<widget xmlns ="http://www.w3.org/ns/widgets"
   xmlns:gap = "http://phonegap.com/ns/"
   id  ="com.phonegap.example2"
   version ="1.0.0">
   
   <name>Proteccion Ambiental</name>
   
   <description>
   Aplicacion que muestra informacion sobre el medio ambiente
   </description>
   
   <author href="https://build.phonegap.com" email="strock.tapia.27@gmail.com">
   Edgar Ivan Tapia Aguilar 4f 
   </author>
   
   <!-- Personaliza la aplicacion y plataforma  -->
   <preference name="orientation"         value="default"/>
   <!-- <preference name="orientation"        value="portrait"/>
   <preference name="orietetion"           value="landscape"/>-->
   <preference name="target-device"           value="universal"/>
   <preference name="fullscreen"             value="true" />
   <preference name="android-instalLocation"  value="auto"/>
   <preference name="permissions" value="INTERNET"/>
   
   <!-- Plugins -->
   <!-- Core plugins -->
   <plugin name="cordova-plugin-device" spec="~1.1.4"/>
   <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
   <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
   
   <!-- <plugin name="cordova-plugin-geolocation" source=npm"/> -->
      <!-- Third part plugins -->
	  
	  <!-- para acceder a paginas de internet -->
	  <allow-intent href="https://*/*"/>
	  <acces origin="https://*/*"/>
	  <allow-intent href="http://*/*"/>
	  <acces origin="http://*/*"/>
	  <plugin name="cordova-plugin-whitelist" source="npm"/>
	  <!-- Colocar icono app -->
	  
	  <icon src="res/android/mdpi.png"/>
	  
	 
	  </widget>
   